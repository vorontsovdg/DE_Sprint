// 1. 2. Написать программу, которая проверяет является ли год високосным.
# include <iostream>
using namespace std;

int main(){
    int year;
    cout << "Please, type year " << endl;
    cin >> year;
    if ((year % 400 == 0) || ((year % 4 == 0) && (year % 100 != 0))) {
        cout << year << " is a leap year" << endl;
    }
    else {
        cout << year << " is not a leap year" << endl;
    }
}
