//7. Написать программу, которая выводит таблицу значений функции y=-2 * x^2 - 5 * x - 8 в диапазоне от –4 до +4, с шагом 0,5
# include <iostream>
# include <cmath>
using namespace std;

int main() {
    double x = -4.0;
    double y;
    while(x <= 4) {
        y = -2 * pow(x,2) - 5 * x - 8;
        cout << "if x = " << x << " function y = -2*x^2-5*x-8 returns " << y << endl;
        x = x + 0.5;
    }
    return 0;
}
