// 1. Написать программу, которая сравнивает два введённых с клавиатуры числа. Программа должна указать, какое число больше или, если числа равны, вывести соответствующее сообщение.
# include <iostream>
using namespace std;

int main(){
    int a, b;
    cout << "Please, type first number " << endl;
    cin >> a;
    cout << "Type second number " << endl;
    cin >> b;
    if (a > b) {
        cout << "Number " << a << " is greater than " << b << endl;}
    else if (a < b) {
        cout << "Number " << a << " is less than " << b << endl;}
    else {
        cout << "Numbers are equal" << endl;}
}